{
    "compilerOptions": {
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "incremental": true,
        "target": "ES2018",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "rootDirs": [ "./" ],
        "extendedDiagnostics": false,
        "experimentalDecorators": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*",
        ".build/**/*",
        ".doc/**/*",
        ".static/**/*",
        ".vscode/**/*",
        ".testing/**/*",
        "coverage/**/*",
        "aggregate/**/*"
    ]
}